<head>
  <link rel="stylesheet" href="{{=it.path}}/templates/style/normalize.css">
  <link rel="stylesheet" href="{{=it.path}}/templates/style/skeleton.css">
  <link rel="stylesheet" href="{{=it.path}}/templates/style/reports.css">
  <meta charset="utf-8" />
</head>

<body>
  <section id="letterhead"></section>

  <section id="title" class="front-matter">
      <h5>IMCK Hopital Bon Berger</h5>
      <h5>Debtor Group Annual Report</h5>
      <h5>{{= it.reportDate }}</h5>
  </section>

  <section>
    <table class="ptable">
      <thead>
        <tr>
          <th>Account Number</th>
          <th>Debtor Group</th>
          <th>
            <table style="height:100%;">
              <tr>
                <th colspan="2"> Balance ({{= it.meta.start }})</th>
              </tr>
              <tr>
                <th> Debit </th>
                <th> Credit </th>
              </tr>
            </table>
          </th>
          <th>Debits</th>
          <th>Credits</th>
          <th>Balance ({{= it.meta.stop }})</th>
        </tr>
      </thead>

      <tbody class="text-condensed">

        {{ for (var account in it.accounts) {  }}

          <tr>
            <td>{{= account.account_number }}</td>
            <td>{{= account.name }}</td>
            <td>{{= account.openingDebits }}</td>
            <td>{{= account.openingCredits }}</td>
            <td>{{= account.debits }}</td>
            <td>{{= account.credits }}</td>
            <td>{{= account.closingBalance }}</td>
          </tr>

        {{ } }}

        {{? (it.meta.size === 0) }}
          <tr>
            <td colspan="7">
              <span class="indicator indicator-success"
                No data found for this Fiscal Year!
              </span>
            </td>
          </tr>
        {{?}}
      </tbody>
    </table>
  </section>
</body>
